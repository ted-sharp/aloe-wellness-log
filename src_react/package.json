{
  "name": "aloe-wellness-log-react",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "体重、血圧、運動記録などを日々記録できる健康管理Progressive Web App（PWA）",
  "keywords": [
    "health",
    "wellness",
    "pwa",
    "react",
    "typescript",
    "healthcare",
    "tracking",
    "weight",
    "blood-pressure",
    "exercise",
    "vite",
    "tailwindcss"
  ],
  "homepage": "https://ted-sharp.github.io/aloe-wellness-log/",
  "repository": {
    "type": "git",
    "url": "https://github.com/ted-sharp/aloe-wellness-log.git",
    "directory": "aloe-wellness-log-react"
  },
  "bugs": {
    "url": "https://github.com/ted-sharp/aloe-wellness-log/issues"
  },
  "author": {
    "name": "ted-sharp",
    "url": "https://github.com/ted-sharp"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:preview": "tsc -b && vite build",
    "build:docs": "tsc -b && vite build",
    "postbuild:docs": "shx cp ../docs/index.html ../docs/404.html",
    "deploy:gh-pages": "tsc -b && vite build --outDir=dist && yarn gh-pages -d dist",
    "deploy": "yarn build:docs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:dev": "eslint . --max-warnings 0",
    "preview": "vite preview --outDir ../docs/aloe-wellness-log",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test --reporter=line",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@headlessui/react": "^2.2.4",
    "@tailwindcss/vite": "^4.1.10",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^18.3.1",
    "react-calendar": "^6.0.0",
    "react-countup": "^6.5.3",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.5.3",
    "react-icons": "^5.5.0",
    "react-qr-code": "^2.0.16",
    "react-router-dom": "^7.6.2",
    "recharts": "^2.15.3",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@playwright/test": "^1.53.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.3",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.25.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "fake-indexeddb": "^6.0.1",
    "gh-pages": "^6.3.0",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "shx": "^0.4.0",
    "tailwindcss": "^4.1.10",
    "terser": "^5.43.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
